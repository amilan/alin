#---------------------------------------------------------------------------
# SCPI driver configuration
#---------------------------------------------------------------------------

# if the SCPI_AUTOOPEN_ flag is set, then the scpi module wil ltry to open the
# defined communication PORT_ by itself. Otherwhise the port will have to be
# opened manually 

SCPI_AUTOOPEN_ = 1

# If the SCPI_LOCAL_ flag is set, the scpi application will open the local 
# addess as the default communication address, it means 0.0.0.0

SCPI_LOCAL_ = 0

# The SCPI_PORT_ is an integer value that it is used to specify the port number
# that will be used in the communications through telnet service. By default it
# is set to localhost, port 5025

SCPI_PORT_ = 5025

# If the SCPI_DEBUG_ flag is set to 1, all scpi log information will be added to 
# the log file and to the screen output. Setting this flag to 0, will 
# just disable the log information through screen

SCPI_DEBUG_ = 1

# The DEBUGLEVEL_ is an integer value which indicates the expected debug
# level for the corresponding device. Expected values are:
#       10 = DEBUG
#       20 = INFO
#       30 = WARNING
#       40 = ERROR
#       50 = CRITICAL

SCPI_DEBUGLEVEL_ = 20
SCPI_DRV_DEBUGLEVEL_ = 10

#---------------------------------------------------------------------------
# WebServer application
#---------------------------------------------------------------------------

# This setting is used to indicate the number of points to be displayed
# in the current graphs, if they are enabled (with WEBSERVER_SHOWGRAPHS

WEBSERVER_LENDATAELEMENTS_ = 50

# This setting set the default port number to use in the webserver

WEBSERVER_PORT_ = 8888

# This setting fixes the data refresh time in the web.
# Value is expressed in seconds unit

WEBSERVER_REFRESH_TIME_ = 1

# FPGA_DATA seetings enables the refresh of the FPGA data page
# If this flag is False the FPGA data is not refreshed

WEBSERVER_FPGA_DATA_ = True

# This is the period in which the FPGA data is refresh, if enabled

WEBSERVER_FPGA_DATA_REFRESH_PERIOD_ = 1

# This is the default used in the acquisition graph in webbrowser.
# The broswer speed depends on the size of points to display.
# Recomended value is 500, expected 1000. More than 1000 points can block the 
# client browser

WEBSERVER_DEFAULT_ACQGRPAH_POINTS_ = 200

# If the DEBUG_ flag is set to 1, all log information will be added to 
# the log file and to the screen output. Setting this flag to 0, will 
# just disable the log information through screen

WEBSERVER_DEBUG_ = 1

# The DEBUGLEVEL_ is an integer value which indicates the expected debug
# level for the corresponding device. Expected values are:
#       10 = DEBUG
#       20 = INFO
#       30 = WARNING
#       40 = ERROR
#       50 = CRITICAL

WEBSERVER_DEBUGLEVEL_ = 20


